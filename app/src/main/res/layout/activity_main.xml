<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongyong.smarthome.MainActivity">
        <!--头部导航栏-->
        <include layout="@layout/common_app_bar"/>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--存放fragment-->
            <FrameLayout
                android:id="@+id/am_fl_fragmentcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white">
            </FrameLayout>
            <!--底部导航栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_49"
                android:layout_alignParentBottom="true"
                android:background="@drawable/top_border">

                <include layout="@layout/navigation_bottom"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:itemBackground="@android:color/white">
        <!-- 列表部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <RelativeLayout
                android:id="@+id/item1_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img1"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"
                    android:gravity="center"
                    android:text="家庭成员"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item2_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img2"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img2"
                    android:gravity="center"
                    android:text="日程提醒"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item3_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img3"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img3"
                    android:gravity="center"
                    android:text="语音备忘"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item4_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img4"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img4"
                    android:gravity="center"
                    android:text="声纹管理"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item5_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img5"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img5"
                    android:gravity="center"
                    android:text="意见反馈"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item6_rv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img6"
                    style="@style/navi_img"
                    android:background="@drawable/play"/>

                <TextView
                    style="@style/navi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img6"
                    android:gravity="center"
                    android:text="关于我们"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/top_border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting"/>

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:text="设置"
                    android:textColor="@color/colorTitle"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/am_changeTheme_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/changetheme"/>

                <TextView
                    android:id="@+id/changeTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:text="主题切换"
                    android:textColor="@color/colorTitle"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
